<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="vertical"
    android:id="@+id/cardview">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagedis"
            android:layout_width="62dp"
            android:layout_height="45dp" />
        <TextView
            android:id="@+id/nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="NAME"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/cousrename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/nameview"
            android:text=" name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewcredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameview"
            android:layout_marginLeft="30dp"
            android:text="ID"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/credithour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cousrename"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/viewcredit"
            android:text="id" />




    </androidx.recyclerview.widget.RecyclerView>


</androidx.cardview.widget.CardView>